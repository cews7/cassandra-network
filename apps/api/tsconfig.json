{
    "$schema": "https://json.schemastore.org/tsconfig",
  
    "_version": "19.1.0",
  
  "compilerOptions": {
    "lib": ["es2023"],
    "module": "preserve",
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "forceConsistentCasingInFileNames": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
} 
